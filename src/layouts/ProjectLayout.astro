---
import type { CollectionEntry } from 'astro:content';
import '../styles/global.css';
import ArticleContainer from '@components/ArticleContainer.astro';
import ProjectSidebar from '@components/Projects/ProjectSidebar.astro';
import { Image } from 'astro:assets';

interface Props {
  content: CollectionEntry<'projects'>;
}

const { content } = Astro.props;
const { title, image, description, tech = [], publishDate, url } = content.data;
const { Content } = await content.render();
---
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/icons/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>

  <article class="crt-bg-flat px-4 md:px-12 lg:px-24 py-8 md:py-12 min-h-screen mx-auto">
    <ArticleContainer title={title} description={description}>
      <!-- Mobile layout - fixed indentation -->
      <div class="md:hidden space-y-6">
        <!-- Image -->
          <Image 
            src={image} 
            alt={title}
            width={800}
            height={450}
            class="image-border2 w-full object-cover aspect-video"
            loading="lazy" 
          />
  
        <!-- Sidebar with table layout -->
          <ProjectSidebar 
            title={title}
            tech={tech}
            url={url}
            sourceUrl={url}
          />
  
        <!-- Content -->
        <div class="text-sm text-white-text sm:text-base mt-4 break-words overflow-hidden">
          <div class="w-full prose prose-invert prose-p:text-white-text prose-headings:text-[#FF2E5E] prose-strong:text-[#DB4B59] prose-a:text-[#8A2F38] prose-li:marker:text-[#8A2F38] prose-blockquote:bg-tertiary/20 prose-blockquote:py-1 prose-blockquote:px-1 prose-blockquote:rounded-lg prose-blockquote:break-words">
            <Content />
          </div>
        </div>
      </div>
      
      <!-- Desktop layout -->
      <div class="hidden md:grid md:grid-cols-[3fr_auto_1fr] gap-6">
        <div class="w-full overflow-hidden">
          <img 
            src={image} 
            alt={title} 
            class="image-border2 w-full object-cover aspect-video" 
          />
  
          <div class="text-sm text-white-text sm:text-base mt-4 break-words overflow-hidden">
            <div class="w-full prose prose-invert prose-p:text-white-text prose-headings:text-[#FF2E5E] prose-strong:text-[#DB4B59] prose-a:text-[#8A2F38] prose-li:marker:text-[#8A2F38] prose-blockquote:bg-tertiary/20 prose-blockquote:py-1 prose-blockquote:rounded-lg max-w-none">
              <Content />
            </div>
          </div>
        </div>
        
        <div class="bg-tertiary w-2px h-full"></div>
  
        <ProjectSidebar 
          title={title}
          tech={tech}
          url={url}
          sourceUrl={url}
        />
      </div>
    </ArticleContainer>
  </article>

</html>