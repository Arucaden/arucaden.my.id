---
import Navbar from '@components/Navbar/Navbar.svelte';
import '../styles/global.css';
import HeroSection from '@components/HeroSection.astro';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Daffa Maulana Satria</title>
    <link rel="icon" type="image/svg+xml" href="/icons/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>

  <body class="flex crt-bg flex-col text-white min-h-screen custom-scroll">
    <HeroSection />
    <main class="flex-grow mx-auto w-full max-w-7xl px-4 sm:px-6 md:px-8 lg:px-12 xl:px-24 pt-8 md:pt-12">
      <Navbar client:only="svelte" />
      <slot />
    </main>
    <footer class="w-full h-12 text-center flex items-center justify-center mt-4 md:mt-0 mb-16 md:mb-4">
      <span class="text-center text-sm text-main">
        &copy; 2025 Daffa Maulana Satria. All rights reserved.
      </span>
    </footer>
  </body>
</html>