---
import Navbar from '@components/Navbar/Navbar.astro';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Daffa Maulana Satria</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body class="flex flex-col bg-white text-white px-4 md:px-48 py-8 md:py-12 md:w-full h-screen custom-scroll">
    <main>
      <Navbar />
		  <slot />
	  </main>
  </body>
  <footer class="bg-blue w-full">
    <span class="text-center text-sm text-main">
      &copy; 2025 Daffa Maulana Satria. All rights reserved.
    </span>
  </footer>
</html>

<style>
  .custom-scroll::-webkit-scrollbar {
    width: 10px; /* Lebar scrollbar */
  }
  
  .custom-scroll::-webkit-scrollbar-thumb {
    background-color: #ff00778d; /* Warna thumb */
    border-radius: 5px; /* Radius thumb */
  }
  
  .custom-scroll::-webkit-scrollbar-track {
    background-color: #2b090e; /* Warna track */
  }

  html {
    scroll-behavior: smooth;
  }
  </style>