---
const { title, description } = Astro.props;
---

<div class="border-2 border-secondary bg-black/40 p-4 shadow-[0_0_8px_rgba(255,77,109,0.5)] rounded-xl">
  <div class="bg-main text-black-text font-sans font-extrabold text-xl px-4 py-2 rounded-lg">
    {title}
    {description && (
      <span class="font-semibold text-black-text/70">
        - {description}
      </span>
    )}
  </div>

  <div class="mt-4 grid grid-cols-1 md:grid-cols-[3fr_auto_1fr] gap-4">
    <slot />
  </div>
</div>