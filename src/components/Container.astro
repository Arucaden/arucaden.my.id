---
interface Props {
  title: string;
  maxHeight?: boolean;
  headingId?: string;
}

const { title, maxHeight = false, headingId } = Astro.props as Props;
const makeId = (s: string) => s.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
const resolvedId = headingId || makeId(title);
---

<div class={`border-2 border-secondary bg-black/40 p-3 md:p-4 shadow-[0_0_8px_rgba(255,77,109,0.5)] rounded-xl ${maxHeight ? 'md:max-h-xl md:overflow-auto' : ''}`}>
  <h2 id={resolvedId} class="bg-main text-black-text font-semibold md:font-semibold text-lg md:text-lg px-3 md:px-4 py-1 rounded-lg">
    {title}
  </h2>

  <div class="mt-3 md:mt-4">
    <slot />
  </div>
</div>

<style>
  div::-webkit-scrollbar {
    width: 4px;
  }
  
  div::-webkit-scrollbar-track {
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 4px;
  }
  
  div::-webkit-scrollbar-thumb {
    background-color: var(--color-main, rgb(255, 0, 119, 0.6));
    border-radius: 4px;
  }
</style>
