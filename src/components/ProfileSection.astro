---
import Container from './Container.astro';
import TechCard from './TechCard.svelte';
import MyLinks from './MyLinks.astro';
import { techItems } from '../data/techstack.ts';

const languages = techItems.filter(item => item.type === 'language');
const highlightedTech = ["Astro", "Unity"];
const highlightedLangs = ["English", "Indonesia"];
---

<Container title="PROFILE">
  <div class="flex flex-col md:flex-row justify-between">
    <div class="flex flex-col w-full md:w-2/3">
      <div class="flex flex-col space-y-4">
        <div class="flex flex-col">
          <p class="text-sm font-medium text-secondary">/ Description</p>
          <p class="text-sm sm:text-base">
            I am an undergraduate Computer Science student at State Polytechnic of Malang, 
            specializing as no specialization i just generalist with no capable of limiting or focusing 
            on one subject, also im single, if you want to make me as your dog and leash me whatever you want,
            feel free to connect.
          </p>
        </div>
        <div class="flex flex-col">
          <p class="text-sm font-medium text-secondary">/ Techstack</p>
          <div class="flex flex-row flex-wrap gap-2">
            {techItems.map(tech => (
              <TechCard
                name={tech.name}
                type={tech.type}
                icon={tech.icon}
                highlight={highlightedTech.includes(tech.name)}
              />
            ))}
          </div>
        </div>
        <div class="flex flex-col">
          <p class="text-sm font-medium text-secondary">/ Language</p>
          <div class="flex flex-row flex-wrap gap-2">
            {languages.map(language => (
              <TechCard
                name={language.name}
                type={language.type}
                icon={language.icon}
                highlight={highlightedLangs.includes(language.name)}
              />
            ))}
          </div>    
        </div>
        <div class="flex flex-col">
          <p class="text-sm font-medium text-secondary">/ Links </p>
          <MyLinks />
        </div>
      </div>
    </div>
    <div class="flex flex-col w-full md:w-80 md:h-102 mt-6 md:mt-0">
      <p class="text-sm font-medium text-secondary">/ Portrait</p>
        <img src="Me.png" alt="Profile Picture" class="border-2 border-secondary w-full h-full object-cover object-center-top" />
    </div>
  </div>
</Container>