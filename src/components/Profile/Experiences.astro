---
import { experiences } from '@data/experiences.ts';
---

<section aria-labelledby="experience-heading" class="flex flex-col flex-1 min-h-0">
  <h2 id="experience-heading" class="section-title">.Experiences</h2>

  <div class="flex-1 min-h-0 space-y-3">
    {experiences.map((exp) => (
      <article class="border-2 border-secondary/30 bg-black/30 rounded-lg p-3">
        <div class="flex items-center justify-between w-full">
          <p class="prose-text font-medium">{exp.company}</p>
          <p class="prose-text text-gray-300">{exp.period}</p>
        </div>
        <p class="text-sm text-gray-300 mt-1">{exp.type}</p>

        {exp.points?.length > 0 && (
          <ul class="mt-2 list-disc list-inside">
            {exp.points.map((pt) => (
              <li class="text-sm text-white/90">{pt}</li>
            ))}
          </ul>
        )}
      </article>
    ))}
  </div>
</section>

