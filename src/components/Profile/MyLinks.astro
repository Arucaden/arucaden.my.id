---
import { links } from '../../data/links.ts';
---

<div class="flex gap-2 flex-wrap">
  {links.map(link => (
    <a
      href={link.href}
      class="flex items-center gap-2 text-main transition-all"
      target="_blank"
    >
      <div class="border-2 border-secondary px-6 md:px-5 py-2 md:py-1 rounded-2 flex items-center justify-center hover:hov-fx">
        <img 
          src={link.icon} 
          alt={link.name} 
          class="w-5 h-5"
          loading="lazy"
          decoding="async"
          width="20"
          height="20"
        />
      </div>
    </a>
  ))}
</div>
