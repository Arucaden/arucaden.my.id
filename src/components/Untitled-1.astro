---
interface Props {
  href: string;
  text?: string;
  variant?: 'default' | 'pill' | 'minimal';
  class?: string;
}

const { 
  href = "/#projects", 
  text = "Back to Projects", 
  variant = "default",
  class: className = "" 
} = Astro.props;

// Styling variants
const styles = {
  default: "inline-flex items-center gap-2 px-4 py-2 border border-main/40 rounded-xl bg-main/10 text-main hover:bg-main/20 transition-colors",
  pill: "inline-flex items-center gap-2 px-4 py-1 bg-main/20 hover:bg-main text-main hover:text-black text-sm rounded-full transition-colors",
  minimal: "inline-flex items-center gap-2 text-main hover:text-white transition-colors"
};

const buttonStyle = styles[variant] + " " + className;
---

<a href={href} class={buttonStyle}>
  <span class="i-heroicons-arrow-left w-5 h-5"></span>
  <span>{text}</span>
</a>