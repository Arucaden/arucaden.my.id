{
  "compilerOptions": {
    "moduleResolution": "node16",
    "module": "Node16",
    "types": ["astro/client"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@data/*": ["src/data/*"],
      "@/*": ["src/*"],
      "@/public/*": ["public/*"]
    }
  },

  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
